<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/menuColor1">
	 <LinearLayout style="@style/TitleBar">
	 <ImageButton style="@style/TitleBarAction"
            android:id="@+id/home" android:src="@drawable/title_home" />
        <ImageView android:paddingLeft="6dp" android:layout_gravity="top" android:layout_height="40dp" android:contentDescription="home" android:id="@+id/imageView2" android:src="@drawable/stclogo_without" android:layout_width="wrap_content"></ImageView>
 		<TextView style="@style/TitleBarText"/>
		<ImageButton style="@style/TitleBarAction"
            android:id="@+id/about" android:src="@drawable/action_bar_info" />                   
    	</LinearLayout>
	<FrameLayout android:id="@+id/frameLayout1"
		android:layout_height="fill_parent" android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical">

			<LinearLayout android:id="@+id/linearLayout4"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:orientation="vertical" android:weightSum="1" android:background="#ffffff">
				
				<TextView android:paddingTop="20dp" android:layout_width="wrap_content"
					android:id="@+id/textView2" android:text="Font size"
					android:layout_gravity="center_horizontal" android:layout_height="wrap_content"></TextView>
				<Spinner android:layout_width="fill_parent"
					android:paddingBottom="10dp" android:layout_height="wrap_content"
					android:id="@+id/spinner1"></Spinner>
				<TextView android:paddingTop="20dp" android:layout_width="wrap_content"
					android:id="@+id/textView1" android:text="Haptic feedback"
					android:layout_gravity="center_horizontal" android:layout_height="wrap_content"></TextView>
				<RadioGroup android:id="@+id/radioGroup1"
					android:layout_width="wrap_content" android:layout_height="wrap_content">
				</RadioGroup>
				<CheckBox android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:text="Haptic feedback enabled"
					android:id="@+id/haptic"></CheckBox>
				<TextView android:paddingTop="20dp" android:layout_width="wrap_content"
					android:id="@+id/textView3" android:text="SlidingDrawer default"
					android:layout_gravity="center_horizontal" android:layout_height="wrap_content"></TextView>
				<Spinner android:layout_width="fill_parent"
					android:paddingBottom="10dp" android:layout_height="wrap_content"
					android:id="@+id/spinner2"></Spinner>
			</LinearLayout>


		</LinearLayout>
	</FrameLayout>

</LinearLayout>

